<?php

function Form($params) {
    $path = $params['path'];
    if (array_key_exists("target", $params)) {
        return ?>
            <form hx-post={$path} hx-ext="json-enc" hx-target={$params['target']}>
                <?php $params['children'] ?>
            </form>
        <?php
    }
    return ?>
        <form hx-post={$path} hx-ext="json-enc">
            <?php $params['children'] ?>
        </form>
    <?php
}

?>